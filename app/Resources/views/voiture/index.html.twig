{% extends 'base.html.twig' %}

{% block body %}
    <h1>Voitures list</h1>

    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>Modele</th>
                <th>Marque</th>
                <th>Photo</th>
                <th>Nombreplaces</th>
                <th>Puissance</th>
                <th>Imagepath</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td><a href="{{ path('voiture_show', { 'id': voiture.id }) }}">{{ voiture.id }}</a></td>
                <td>{{ voiture.matricule }}</td>
                <td>{{ voiture.modele }}</td>
                <td>{{ voiture.marque }}</td>
                <td>{{ voiture.photo }}</td>
                <td>{{ voiture.nombreplaces }}</td>
                <td>{{ voiture.puissance }}</td>
                <td>{% if voiture.imagePath %}{{ voiture.imagePath|join(', ') }}{% endif %}</td>
                <td>{{ voiture.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('voiture_show', { 'id': voiture.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('voiture_edit', { 'id': voiture.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('voiture_new') }}">Create a new voiture</a>
        </li>
    </ul>
{% endblock %}
